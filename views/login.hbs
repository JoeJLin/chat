<div>
    <form action="/login" method="post">
        <div class="field">
            <label for="user-username" class="label">Username</label>
            <input type="text" name="username" class="input" id="user-username" placeholder="Username">
            <label for="user-password" class="label">Password</label>
            <input type="password" name="password" class="input" id="user-password" placeholder="Password">
        </div>

        <div>
            <button type="submit" class="button is-link">Submit</button>
        </div>
    </form>
</div>