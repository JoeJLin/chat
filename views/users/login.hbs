<div class="tile is-ancestor is-mobile columns">
    <div class="tile is-parent">
        <article class="tile is-child notification is-success">
            <div class="content">
                <p class="subtitle">Friend List</p>
                <div class="content">
                    <form action="/chats/chat/add" method="GET">
                        <div class="field">
                            <div class="control">
                                <input class="input is-black" type="text" placeholder="Friend Name" id="friendName" name="friendName">
                            </div>
                        </div>
                        <div class="field is-grouped is-grouped-right">
                            <div class="control">
                                <button type="submit" class="button is-white is-outlined" id="addFriend">Add</button>
                            </div>
                        </div>
                    </form>
                    <div id="friendList"></div>
                    <p class="menu-label">Friend List</p>
                    <ul class="menu-list">
                        {{#each user.friendList as | friend |}}
                        <li style="color:white">
                            <a>{{this.username}}</a>
                        </li>
                        {{/each}}
                    </ul>
                    <div class="sidebar-channel-div display-between">
                        <h2>Channel</h2>
                        <span id="addChannel">
                            <i class="fas fa-plus"></i>
                        </span>
                    </div>
                    <div id="channelContent" class="displayChannelInput display-between">
                        <input type="text" placeholder="Create Channel" class="input is-black" id="channelInput">
                        <span id="createChannel">
                            <i class="fas fa-check"></i>
                        </span>
                    </div>
                    
                    <div id="channelList">
                        <div class="channel channel-active">General</div>
                    </div>
                </div>
            </div>
        </article>
    </div>
    <div class="tile is-parent is-6 is-half-mobile column">
        <article class="tile is-child box mainContent">
            <div class="is-grouped-right is-grouped field">
                <div class="control">
                    <span id="closeInfoWindow">
                        <button class="delete"></button>
                    </span>
                </div>
            </div>

            <p class="title" id="JoinChannelTitle">General</p>
            <p class="subtitle"><span id="permission">Public</span></p>
            <div class="display-between">
                <div class="">Owner: <span id="ChannelOwner">JOe</span></div>
                <div>Max Number: <span id="maxLimit">4</span></div>
            </div>
            <hr>
            <p class="subtitle">Channel Description:</p>
            <div id="JoinChannelDescription"></div>
            <div class="display-between">
                <button class="button is-black is-outlined is-medium" id="joinBtn">Join</button>
                <button class="button is-black is-outlined is-medium" id="cancelBtn">Cancel</button>
            </div>
        </article>
    
    </div>
    <div class="tile is-parent">
        <article class="tile is-child notification is-success">
            <div class="content">
                <p class="title">Tall tile</p>
                <p class="subtitle">With even more content</p>
                <div class="content">
                    <!-- Content -->
                </div>
            </div>
        </article>
    </div>
</div>